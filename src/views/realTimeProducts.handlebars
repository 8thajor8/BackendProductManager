<h1>Product Catalogue</h1>
    
    <div id="product-list" style="display: flex;">
        <div class="add-box" style="flex: 1; padding: 20px;">
            <h2>Add Product</h2>
            <form id="addProductForm">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
                <label for="description">Description:</label>
                <input type="text" id="description" name="description" required>
                <label for="code">Code:</label>
                <input type="text" id="code" name="code" required>
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" step="0.01" required>
                <label for="stock">Stock:</label>
                <input type="number" id="stock" name="stock" required>
                <label for="category">Category:</label>
                <input type="text" id="category" name="category" required>
                    
                <button type="button" onclick="addProduct()">Add</button>
            </form>
        </div>
        <div id="product-list-specific" style="flex: 1;">
            <ul id="product-list-ul">
                {{#each products}}
                    <li>
                        <h3>{{ id }}: {{ title }}</h3>
                        <p>Description: {{ description }}</p>
                        <p>Code: {{ code }}</p>
                        <p>Price: {{ price }}</p>
                        <p>Status: {{ status }}</p>
                        <p>Stock: {{ stock }}</p>
                        <p>Category: {{ category }}</p>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div style="flex: 1; padding: 20px;">
            
            <div>
                <h2>Update Product</h2>
                <input type="text" id="updateProductId" placeholder="Product ID">
                <input type="text" id="updateProperty" placeholder="Property">
                <input type="text" id="updateNewValue" placeholder="New Value">
                <button onclick="updateProduct()">Update</button>
            </div>
            
            <div style="margin-top: 20px;">
                <h2>Delete Product</h2>
                <input type="text" id="deleteProductId" placeholder="Product ID">
                <button onclick="deleteProduct()">Delete</button>
            </div>
        </div>
    </div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.7/dist/handlebars.min.js"></script>
<script src="/js/realTimeProducts.js"></script>